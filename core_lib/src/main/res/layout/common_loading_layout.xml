<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="12dip" >

    <RelativeLayout
        android:id="@+id/rv_common_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/common_loading_round_black"
        android:padding="12dip" >

        <ImageView
            android:id="@+id/iv_common_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/za_loading" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/za_loading_car" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_common_empty"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dimens_7"
        android:layout_marginLeft="@dimen/dimens_20"
        android:layout_marginRight="@dimen/dimens_20"
        android:scaleType="fitXY"
        android:src="@drawable/common_empty"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_common_loading_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:gravity="center"
        android:text=""
        android:textSize="@dimen/font_size_18"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/lv_commom_network_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/txt_loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:shadowColor="#000000"
            android:textColor="@color/color_333333"
            android:text="网络请求失败"
            android:textSize="@dimen/font_size_18" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:text="请检测您的网络\n重新加载吧"
            android:textColor="#B3BAC7"
            android:textSize="@dimen/font_size_16" />

        <Button
            android:id="@+id/btn_common_retry"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_45dp"
            android:layout_marginLeft="@dimen/dimens_15"
            android:layout_marginRight="@dimen/dimens_15"
            android:layout_marginTop="@dimen/dimens_10"
            android:background="@drawable/contact_btn_invite_select"
            android:text="@string/common_click_retry"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_common_upload"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_45dp"
        android:layout_marginLeft="@dimen/dimens_15"
        android:layout_marginRight="@dimen/dimens_15"
        android:layout_marginTop="@dimen/dimens_10"
        android:visibility="gone"
        android:background="@drawable/contact_btn_invite_select"
        android:text="一键上传"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_size_16" />

</LinearLayout>